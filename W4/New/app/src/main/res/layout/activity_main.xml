<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_marginTop="30sp"
        android:layout_marginBottom="25sp"
        android:gravity="center"
        android:text="Rock paper scissors"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="278dp"
        android:orientation="horizontal">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:layout_weight="2">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="188dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Computer"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="102dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Player"
                    android:textSize="24sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="264dp">

                <TextView
                    android:id="@+id/txtCom"
                    android:layout_width="185dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:text="Wait player"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="227dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/imbtnScissors"
                        android:layout_width="69dp"
                        android:layout_height="69dp"
                        android:background="#00000000"
                        android:scaleType="fitCenter"
                        tools:srcCompat="@drawable/scissor" />

                    <ImageButton
                        android:id="@+id/imbtnRock"
                        android:layout_width="69dp"
                        android:layout_height="69dp"
                        android:background="#00000000"
                        android:scaleType="fitCenter"
                        tools:srcCompat="@drawable/rock" />

                    <ImageButton
                        android:id="@+id/imbtnPaper"
                        android:layout_width="69dp"
                        android:layout_height="69dp"
                        android:background="#00000000"
                        android:scaleType="fitCenter"
                        tools:srcCompat="@drawable/paper" />

                </LinearLayout>

            </TableRow>

        </TableLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:gravity="center"
        android:text="Play choose a button"
        android:textSize="24sp" />

</LinearLayout>